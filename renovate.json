{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "ignoreTests": true,
  "automerge": true,
  "assignees": [
    "tim-krehan"
  ],
  "ignoreDeps": [],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/update-chart.yaml$/"],
      "matchStrings": [
        "\\s*#\\s*(?<datasource>[^:]+): (?<depName>[\\w\\-\\/]+)[\\n\\s]+\\w+_VERSION: '(?<currentValue>v[\\d\\.]+)'"
      ],
      "versioningTemplate": "semver"
    }
  ]
}