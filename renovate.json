{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "ignoreTests": true,
  "automerge": true,
  "assignees": [
    "tim-krehan"
  ],
  "ignoreDeps": [
    "common",
    "postgresql",
    "redis",
    "docker.io/qmcgaw/gluetun",
    "ghcr.io/coder/code-server",
    "ghcr.io/nicolaka/netshoot",
    "docker.io/bitnami/postgresql",
    "docker.io/bitnami/os-shell",
    "docker.io/bitnami/postgres-exporter",
    "docker.io/bitnami/redis",
    "docker.io/bitnami/redis-sentinel",
    "docker.io/bitnami/redis-exporter",
    "docker.io/bitnami/os-shell",
    "docker.io/bitnami/kubectl",
    "tensorchord/pgvecto-rs",
    "tensorchord/pgvecto-rs"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/update-chart.yaml$/"],
      "matchStrings": [
        "\\s*#\\s*(?<datasource>[^:]+): (?<depName>[\\w\\-\\/]+)[\\n\\s]+\\w+_VERSION: '(?<currentValue>[\\w\\-\\d\\.]+)'"
      ],
      "versioningTemplate": "regex:^immich-(?<version>.*)$"
    }
  ]
}